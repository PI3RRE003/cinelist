<div class="min-h-screen p-8 flex items-center justify-center">
  
  <div class="max-w-6xl w-full bg-gray-800 rounded-2xl shadow-2xl overflow-hidden flex flex-col md:flex-row border border-gray-700">
    
    <div class="md:w-1/3 relative">
      <% poster = (@movie["Poster"] == "N/A") ? "https://placehold.co/400x600?text=Sem+Imagem" : @movie["Poster"] %>
      <img src="<%= poster %>" class="w-full h-full object-cover">
    </div>

    <div class="md:w-2/3 p-8 md:p-12 flex flex-col justify-between">
      
      <div>
        <div class="flex justify-between items-start mb-4">
          <div>
            <h1 class="text-4xl font-bold text-white mb-2"><%= @movie["Title"] %></h1>
            <div class="flex items-center gap-4 text-sm text-gray-400">
              <span class="border border-gray-600 px-2 py-0.5 rounded"><%= @movie["Year"] %></span>
              <span><%= @movie["Runtime"] %></span>
              <span><%= @movie["Genre"] %></span>
            </div>
          </div>
          
          <div class="flex flex-col items-center bg-gray-900/50 p-3 rounded-lg border border-yellow-600/30">
            <span class="text-yellow-500 font-bold text-xl">â˜… <%= @movie["imdbRating"] %></span>
            <span class="text-xs text-gray-500">IMDb</span>
          </div>
        </div>

        <div class="mb-8">
          <h3 class="text-yellow-500 font-bold uppercase tracking-wider text-sm mb-2">Sinopse</h3>
          <p class="text-gray-300 leading-relaxed text-lg"><%= @movie["Plot"] %></p>
        </div>

        <div class="grid grid-cols-2 gap-6 mb-8">
          <div>
            <h4 class="text-gray-500 text-sm mb-1">Diretor</h4>
            <p class="text-white font-medium"><%= @movie["Director"] %></p>
          </div>
          <div>
            <h4 class="text-gray-500 text-sm mb-1">Elenco</h4>
            <p class="text-white font-medium"><%= @movie["Actors"] %></p>
          </div>
        </div>
      </div>

      <div class="border-t border-gray-700 pt-6 flex gap-4">
        
        <a href="javascript:history.back()" class="px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white rounded-lg font-bold transition-colors">
          Voltar
        </a>

        <% if @local_movie %>
          
          <form action="/favorites/<%= @local_movie.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="px-6 py-3 bg-red-600 hover:bg-red-500 text-white rounded-lg font-bold transition-colors flex items-center gap-2">
              <i data-lucide="trash-2" class="w-5 h-5"></i>
              Remover dos Favoritos
            </button>
          </form>

        <% else %>

          <form action="/favorites" method="POST" class="flex-1">
            <input type="hidden" name="title" value="<%= @movie["Title"] %>">
            <input type="hidden" name="year" value="<%= @movie["Year"] %>">
            <input type="hidden" name="poster" value="<%= poster %>">
            <input type="hidden" name="imdb_id" value="<%= @movie["imdbID"] %>">
            
            <button type="submit" class="w-full px-6 py-3 bg-yellow-600 hover:bg-yellow-500 text-white rounded-lg font-bold transition-colors flex items-center justify-center gap-2 shadow-lg shadow-yellow-900/20">
              <i data-lucide="heart" class="w-5 h-5"></i>
              Adicionar aos Favoritos
            </button>
          </form>

        <% end %>

      </div>

    </div>
  </div>
</div>