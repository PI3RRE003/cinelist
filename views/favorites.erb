<div class="p-8">
  <div class="flex items-center justify-between mb-8">
    <h2 class="text-3xl font-bold text-white flex items-center gap-3">
      <i data-lucide="heart" class="text-red-500 fill-current"></i>
      Minha Coleção
    </h2>
    <span class="text-gray-400 text-sm"><%= @favorites.count %> filmes salvos</span>
  </div>

  <% if @favorites.empty? %>
    <div class="text-center py-20 border-2 border-dashed border-gray-800 rounded-xl">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-800 mb-4">
        <i data-lucide="film" class="w-8 h-8 text-gray-500"></i>
      </div>
      <h3 class="text-xl font-medium text-white">Sua lista está vazia</h3>
      <p class="text-gray-500 mt-2 mb-6">Você ainda não salvou nenhum filme.</p>
      <a href="/" class="inline-flex items-center gap-2 px-6 py-3 bg-yellow-600 hover:bg-yellow-500 text-white font-bold rounded-lg transition-colors">
        <i data-lucide="search" class="w-4 h-4"></i>
        Buscar Filmes Agora
      </a>
    </div>
  <% else %>
  
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
      <% @favorites.each do |movie| %>
        <div class="group relative bg-gray-800 rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all hover:-translate-y-1">
          
          <div class="relative aspect-[2/3]">
            <img src="<%= movie.poster %>" alt="<%= movie.title %>" class="w-full h-full object-cover">
            
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent opacity-80"></div>
          </div>

          <div class="absolute bottom-0 left-0 right-0 p-4">
            <h3 class="text-lg font-bold text-white leading-tight mb-1 truncate"><%= movie.title %></h3>
            <div class="flex items-center justify-between">
              <span class="text-sm text-yellow-500 font-medium"><%= movie.year %></span>
              
          <form action="/favorites/<%= movie.id %>" method="POST" style="display: inline;">
            
            <input type="hidden" name="_method" value="DELETE">
            
            <button type="submit" class="text-gray-400 hover:text-red-500 transition-colors" title="Remover dos favoritos">
              <i data-lucide="trash-2" class="w-4 h-4"></i>
            </button>
            
          </form>            
          </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>