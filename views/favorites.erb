<div class="p-8">
  <div class="flex items-center justify-between mb-8">
    <h2 class="text-3xl font-bold text-white flex items-center gap-3">
      <i data-lucide="heart" class="text-red-500 fill-current"></i>
      Minha Coleção
    </h2>
    <span class="text-gray-400 text-sm"><%= @favorites.count %> filmes salvos</span>
  </div>

  <% if @favorites.empty? %>
    <div class="text-center py-20 border-2 border-dashed border-gray-800 rounded-xl">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-800 mb-4">
        <i data-lucide="film" class="w-8 h-8 text-gray-500"></i>
      </div>
      <h3 class="text-xl font-medium text-white">Sua lista está vazia</h3>
      <p class="text-gray-500 mt-2 mb-6">Você ainda não salvou nenhum filme.</p>
      <a href="/" class="inline-flex items-center gap-2 px-6 py-3 bg-yellow-600 hover:bg-yellow-500 text-white font-bold rounded-lg transition-colors">
        <i data-lucide="search" class="w-4 h-4"></i>
        Buscar Filmes Agora
      </a>
    </div>
  <% else %>
  
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
      <% @favorites.each do |movie| %>
        <div class="group relative bg-gray-800 rounded-xl overflow-hidden shadow-xl transition-all hover:-translate-y-1 hover:shadow-2xl hover:border hover:border-gray-700">
  
  <a href="/details/<%= movie.imdb_id %>" class="block relative aspect-[2/3] overflow-hidden">
    <img src="<%= movie.poster %>" alt="<%= movie.title %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105">
    
    <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent opacity-90"></div>
    
    <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
      <span class="bg-yellow-500 text-gray-900 text-xs font-bold px-3 py-1 rounded-full shadow-lg">Ver Detalhes</span>
    </div>
  </a>

  <div class="absolute bottom-0 left-0 right-0 p-4 z-10">
    
    <h3 class="text-white font-bold text-lg leading-tight mb-1 truncate drop-shadow-md"><%= movie.title %></h3>
    
    <div class="flex items-center justify-between">
      <span class="text-yellow-400 font-medium text-sm drop-shadow-md"><%= movie.year %></span>
      
      <form action="/favorites/<%= movie.id %>" method="POST" class="relative z-20">
        <input type="hidden" name="_method" value="DELETE">
        
        <button type="submit" class="p-2 bg-gray-800/80 hover:bg-red-600 text-gray-400 hover:text-white rounded-full transition-all backdrop-blur-sm" title="Remover dos favoritos">
          <i data-lucide="trash-2" class="w-4 h-4"></i>
        </button>
      </form>
      
    </div>
  </div>
</div>
      <% end %>
    </div>
  <% end %>
</div>