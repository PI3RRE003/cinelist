<div class="p-8 min-h-screen">
  
  <div class="flex flex-col md:flex-row items-center justify-between mb-8 gap-4">
    <div>
      <h2 class="text-3xl font-bold text-white mb-2">
        Resultados para <span class="text-yellow-500">"<%= params[:q] %>"</span>
      </h2>
      <% if @movies %>
        <p class="text-gray-400 text-sm">Encontramos <%= @movies.length %> títulos</p>
      <% end %>
    </div>

    <a href="/" class="flex items-center gap-2 px-5 py-2.5 bg-gray-800 hover:bg-gray-700 text-gray-300 rounded-lg transition-colors border border-gray-700">
      <i data-lucide="search" class="w-4 h-4"></i>
      Nova Pesquisa
    </a>
  </div>

  <% if @error %>
    <div class="flex flex-col items-center justify-center py-20 bg-gray-800/50 rounded-xl border border-red-900/50">
      <div class="w-16 h-16 bg-red-900/20 rounded-full flex items-center justify-center mb-4">
        <i data-lucide="frown" class="w-8 h-8 text-red-500"></i>
      </div>
      <h3 class="text-xl font-bold text-white mb-2">Ops! Não encontramos nada.</h3>
      <p class="text-gray-400"><%= @error %></p>
    </div>
  <% else %>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
      <% @movies.each do |movie| %>
        
        <div class="bg-gray-800 rounded-xl overflow-hidden shadow-lg border border-gray-700 hover:border-yellow-500/50 transition-all hover:-translate-y-1 flex flex-col h-full group">
          
          <% poster_url = (movie["Poster"] == "N/A") ? "https://placehold.co/300x450/1f2937/FFF?text=Sem+Poster" : movie["Poster"] %>
          
          <div class="relative aspect-[2/3] overflow-hidden bg-gray-900">
            <a href="/details/<%= movie["imdbID"] %>" class="block relative aspect-[2/3] overflow-hidden bg-gray-900">
              <img src="<%= poster_url %>" alt="<%= movie["Title"] %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
            </a>
            <div class="absolute top-2 right-2 bg-black/70 backdrop-blur-sm text-yellow-400 text-xs font-bold px-2 py-1 rounded">
              <%= movie["Year"] %>
            </div>
          </div>

          <div class="p-4 flex flex-col flex-grow justify-between">
            <h3 class="text-white font-semibold leading-tight mb-4 line-clamp-2" title="<%= movie["Title"] %>">
              <%= movie["Title"] %>
            </h3>

            <form action="/favorites" method="POST">
              <input type="hidden" name="title" value="<%= movie["Title"] %>">
              <input type="hidden" name="year" value="<%= movie["Year"] %>">
              <input type="hidden" name="poster" value="<%= poster_url %>">
              <input type="hidden" name="imdb_id" value="<%= movie["imdbID"] %>">
              
              <button type="submit" class="w-full flex items-center justify-center gap-2 py-2.5 bg-yellow-600 hover:bg-yellow-500 text-white text-sm font-bold rounded-lg transition-colors active:scale-95 shadow-lg shadow-yellow-900/20">
                <i data-lucide="plus" class="w-4 h-4"></i>
                Adicionar à Lista
              </button>
            </form>
          </div>

        </div>
      <% end %>
    </div>
    
  <% end %>
</div>